{
  "name": "10academy-chrome-extension",
  "description": "Chrome extension for managing and sharing bookmarks",
  "version": "1.0",
  "manifest_version": 3,
  "options_page": "./views/options.html",
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "/images/10_academy.png",
      "32": "/images/10_academy.png",
      "48": "/images/10_academy.png",
      "128": "/images/10_academy.png"
    }
  },
  "icons": {
    "16": "/images/10_academy.png",
    "32": "/images/10_academy.png",
    "48": "/images/10_academy.png",
    "128": "/images/10_academy.png"
  }
}